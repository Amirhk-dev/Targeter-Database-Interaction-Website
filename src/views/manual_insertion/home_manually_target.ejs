<%- include("../header") -%>

<div class="row twopanel">
    <div class="col-lg-12">
        <h1 class="site_msg" style="text-align: center;">
        <em>Target belongs to Sample and shows points to shoot at.</em>
        <br>
        <br>
        <div class="row">
            <img class="center" src='target.jpg' alt="Target Photo">
        </div>
        <br>
        <br>
            Target for the Subframe <%= insert_subframe_information[0]['value'] %>
        </h1>
        <h2 class="site_msg" style="text-align: center;">
            Insert Target Information
        </h2>
    </div>
</div>

<form action="/DEFAULT_URL" method="post">
    
    <div class="row">
        <div class="col-lg-4">
            <div class="form-group">
                <label class="label-text">X Position (*)</label>
                <input type="number" name="target_x_position"
                    id="target_x_position"
                    class="form-control"
                    placeholder="Insert the X Position"
                    min="0">
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label class="label-text">Y Position (*)</label>
                <input type="number" name="target_y_position"
                    id="target_y_position"
                    class="form-control"
                    placeholder="Insert the Y Position"
                    min="0">
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group">
                <label class="label-text">Z Position (*)</label>
                <input type="number" name="target_z_position"
                    id="target_z_position"
                    class="form-control"
                    placeholder="Insert the Z Position"
                    min="0">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">    
            <div class="form-group">
                <label class="label-text">
                    Enter the Date of the Target Creation (*)
                </label>
                <input class="form-control" type="date"
                id="target_date" name="target_date" min="2012-01-01"
                max="2040-12-31">
            </div>
        </div>
        <div class="col-lg-6">    
            <div class="form-group">
                <label class="label-text">
                    Enter the Time of Target Creation (*)
                </label>
                <input class="form-control" type="time"
                id="target_time" name="target_time">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label for="TargetComments">Comments Related to the Target Creation</label>
            <textarea class="form-control" id="TargetComments" name="TargetComments"
                placeholder="Comments (at most 200 of characters are accepted)"
                rows="2" minlength="0" maxlength="200">
            </textarea>
            <br>
        </div>
        <hr>
    </div>

    <div class="row twopanel">
        <div class="row">
            <button class="btn btn-outline-secondary" type="submit"
                formaction="/createSubframeTarget"
                onclick="checkValues(event)"
                name="create_target_for_subframe" value="2">
                    Create <em>(another)</em> Target
            </button>
        </div>
    </div>

    <div class="row twopanel">
        <div class="row">
            <button class="btn btn-outline-secondary" type="submit"
                formaction="/createTargetEvent"
                onclick="checkValues(event)"
                name="create_event_for_target" value="0">
                    Create Event for the Target
            </button>
        </div>    
    </div>

    <div class="row twopanel">
        <div class="row">
            <button class="btn btn-outline-secondary" type="submit"
                formaction="/submitAndReturnToMain"
                onclick="checkValues(event)"
                name="submit_the_data_to_db" value="6">
                    Submit the Data to Database <em>and Return to the Main Page</em>
            </button>
        </div>
    </div>
</form>

<form action="/" method="get">
    <div class="row twopanel">
        <div class="row">
            <button class="btn btn-outline-secondary" type="submit"
                name="cancel_and_return_to_main" value="0">
                    Cancel <em>and Return to the Main Page</em>
            </button>
        </div>
    </div>
</form>

<script>
    function checkValues() {
        let target_x_position = document.getElementById("target_x_position").value;
        let target_y_position = document.getElementById("target_y_position").value;
        let target_z_position = document.getElementById("target_z_position").value;        
        let data_value = document.getElementById("target_date").value;
        let time_value = document.getElementById("target_time").value;
        
        if (target_x_position == ""){
            alert("X position of the target is not inserted!");
            event.preventDefault();
            return;
        }

        if (target_y_position == ""){
            alert("Y position of the target is not inserted!");
            event.preventDefault();
            return;
        }

        if (target_z_position == ""){
            alert("Z position of the target is not inserted!");
            event.preventDefault();
            return;
        }

        if (data_value == ""){
            alert("Target creation Date is not Inserted!");
            event.preventDefault();
            return;
        }
            
        if (time_value == ""){
            alert("Target creation Time is not Inserted!");
            event.preventDefault();
            return;
        }
    }
</script>

<%- include("../footer") -%>