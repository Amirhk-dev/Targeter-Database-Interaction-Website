<%- include("header") -%>
    <div class="row">
        <div class="col-lg-12">
            <form id="enterTargetData" method="POST" action='/submitSampleImageManually'>
            <br>
            <br>
            <p class="lead_text">Enter Sample Information</p>
            <div class="form-check">
                <label class="form-check-label" for="sample_image_validity">Validity</label>
                <input type="checkbox" class="form-check-input" id="sample_image_validity" name="sample_image_validity">
            </div>
            <div class="form-group">
                <label class="label-text">Enter Pixel Size X (Width)</label>
                <input type="number" name="pixel_size_x" class="form-control" placeholder="Pixel Width (values between 0 and 10 are accepted)" min="0" max="10">
            </div>
            <div class="form-group">
                <label class="label-text">Enter Pixel Size Y (Height)</label>
                <input type="number" name="pixel_size_y" class="form-control" placeholder="Pixel Height (values between 0 and 10 are accepted)" min="0"
                    max="10">
            </div>
            <div class="form-group">
                <label class="label-text">Bounding Box X Position <em>(Top-Left Corner
                        Position)</em></label>
                <input type="number" name="BB_x_position" class="form-control" placeholder="Bounding Box X Position (values between 0 and 800 are accepted)"
                    min="0" max="800">
            </div>
            <div class="form-group">
                <label class="label-text">Bounding Box Y Position <em>(Top-Left Corner
                        Position)</em></label>
                <input type="number" name="BB_y_position" class="form-control" placeholder="Bounding Box Y Position (values between 0 and 800 are accepted)"
                    min="0" max="800">
            </div>
            <div class="form-group">
                <label class="label-text">Bounding Box Width</label>
                <input type="number" name="BB_width" class="form-control" placeholder="Bounding Box Width (values between 0 and 800 are accepted)" min="0"
                    max="800">
            </div>
            <div class="form-group">
                <label class="label-text">Bounding Box Height</label>
                <input type="number" name="BB_height" class="form-control" placeholder="Bounding Box Height (values between 0 and 800 are accepted)" min="0"
                    max="800">
            </div>
            <div>
                <label for="MaskImageLoad" class="form-label label-text">Insert the Mask Image</label>
                <input class="form-control" type="file" id="MaskImageLoad" name="mask_image_load">
            </div>
            <div class="form-group">
                <label class="label-text">Enter the Date the Sample Image is Created</strong></label>
                <input class="form-control" type="date" id="sampleimage_experiment_date" name="sampleimage_experiment_date" min="2012-01-01" max="2040-12-31">
            </div>
            <div class="form-group">
                <label class="label-text">Enter the Time the Sample Image is Created</strong></label>
                <input class="form-control" type="time" id="sampleimage_experiment_time" name="sampleimage_experiment_time">
            </div>
            <div class="form-group">
                <label for="sampleComments">Enter Comments Related to the Sample</label>
                <textarea class="form-control" id="SampleComments" name="sample_comments" placeholder="Comments (at most 200 of characters are accepted)"  rows="2" minlength="0" maxlength="200"></textarea>
            </div>
            <hr />

            <!-- SampleImage Related Data -->
            <p class="lead_text">Enter Sample Image Information</p>
            <div class="form-check">
                <label class="form-check-label" for="sampleinfo_validity">Validity</label>
                <input type="checkbox" class="form-check-input" id="sampleinfo_validity" name="sample_info_validity">
            </div>
            <div class="form-group">
                <label class="label-text" for="SAMPLEmicroscopeDateSelect">Microscope Type</label>
                <select class="form-control" id="SAMPLEmicroscopeDateSelect" name="sample_microscope_data">
                    <option selected>Choose...</option>
                    <option>Keyence</option>
                    <option>Nanofocus</option>
                </select>
            </div>
            <div class="form-group">
                <label class="label-text" for="SAMPLEdetectionMethodSelect">Detection (Imaging)
                    Method</label>
                <select class="form-control" id="SAMPLEdetectionMethodSelect" name="sample_detection_method">
                    <option selected>Choose...</option>
                    <option>Hough Circle Transform</option>
                    <option>Mask R-CNN</option>
                </select>
            </div>
            <div>
                <label for="ROImageLoad" class="form-label label-text">Insert the ROI Image</label>
                <input class="form-control" type="file" id="ROIImageLoad" name="roi_image_load">
            </div>
            <div class="form-group">
                <label class="label-text" for="imagetype">Image Type</label>
                <select class="form-control" id="imagetype" name="image_type">
                    <option selected>Choose...</option>
                    <option>PNG</option>
                    <option>JPG</option>
                    <option>JPEG</option>
                    <option>TIFF</option>
                </select>
            </div>
            <div class="form-group">
                <label class="label-text">Image Width</label>
                <input type="number" name="image_width" class="form-control" placeholder="Image Width (values between 0 and 4000 are accepted)" min="0" max="4000">
            </div>
            <div class="form-group">
                <label class="label-text">Image Height</label>
                <input type="number" name="image_height" class="form-control" placeholder="Image Height (values between 0 and 4000 are accepted)" min="0"
                    max="4000">
            </div>
            <div class="form-group">
                <label class="label-text">Image Size (in MB)</label>
                <input type="number" name="image_size" class="form-control" placeholder="Image Size (values between 0 and 1000000 are accepted)" min="0" max="1000000">
            </div>
            <div class="form-group">
                <label for="ImageComments">Enter Comments Related to the Image</label>
                <textarea class="form-control" id="ImageComments" name="image_comments" placeholder="Comments (at most 200 of characters are accepted)" rows="2" minlength="0" maxlength="200"></textarea>
            </div>
            <div>
                <label for="ImageLoad" class="form-label label-text">Insert the Image</label>
                <input class="form-control" type="file" id="ImageLoad" name="image_load">
            </div>
            <div class="form-group">
                <label class="label-text">Enter the Date the Sample Information is Inserted</strong></label>
                <input class="form-control" type="date" id="sampleinfo_experiment_date" name="sampleinfo_experiment_date"
                    min="2012-01-01" max="2040-12-31">
            </div>
            <div class="form-group">
                <label class="label-text">Enter the Time the Sample Information is Inserted</strong></label>
                <input class="form-control" type="time" id="sampleinfo_experiment_time" name="sampleinfo_experiment_time">
            </div>
            <button class="btn btn-secondary" type="submit" form="enterTargetData">Enter the Target Information</button>
        </form>
        </div>
    </div>
<%- include("footer") -%>