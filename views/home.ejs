<%- include("header") -%>

<script type="text/javascript">
    function showMessage() {
        alert("The OpenAI requires account billing to be able to chat!");
    }
</script>

<div class="container-fluid">
    <div class="row title">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="site_msg"><em>There are </em><strong>
                        <%=data%>
                    </strong><em>
                        Subframe Information Available in the Database
                    </em>
                </h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <form method="POST" action='/createSubframe'>
                <div class="form-group">
                    <label class="label-text" id="create_subframe">
                        Do you want to create a "SubframeID" for
                        physical subframe creation?
                    </label>
                </div>
                <button class="btn btn-secondary">Create Subframe</button>
            </form>
            
            <form method="POST" action='/viewDBTables'>
                <div class="form-group">
                    <label class="label-text" id="view_db_tables">
                        Do you want to view tables and their entries?
                    </label>
                </div>
                <button class="btn btn-secondary">
                    View Tables
                </button>
            </form>

            <form method="POST" action='/chatbot'>
                <div class="form-group">
                    <label class="label-text" id="chatbot">
                        Do you want to try OpenAI-based Chatbot?
                    </label>
                </div>
                <button class="btn btn-secondary" onclick="showMessage()">
                    Chat with the Database?<br>
                    <em>
                        (Powered by OpenAI)
                    </em>
                </button>
            </form>

            <form method="POST" action='/database_query'>
                <div class="form-group">
                    <label class="label-text" id="database_query">
                        Do you want to query from the database?
                    </label>
                </div>
                <button class="btn btn-secondary">
                    Query the Database
                </button>
            </form>

            <form method="POST" action='/submitDataManually'>
                <div class="form-group">
                    <label class="label-text" id="manual_insert">
                        Do you want to insert the data manually?
                    </label>
                </div>
                <button class="btn btn-secondary">
                    Insert the Data Manually
                </button>
            </form>
                        
            <form method="POST" action='/submitXMLFile'>
                <div class="form-group">
                    <label class="label-text" id="xml_insert" for="xmlFileLoad">
                        Submit the Experiment (XML file): 
                    </label>
                    <input type="file" class="form-control" id="xmlFileLoad"
                    name="xmlFile">
                </div>
                <button class="btn btn-secondary">
                    Load the Data from XML File
                </button>
            </form>
            
            <form>
                <div class="form-group">
                    <label class="label-text">
                        Edit Tables of the Database:
                    </label>
                    <br>
                    <br>
                    <a class="btn btn-secondary" href="/register" role="button">
                        Register
                    </a>
                    <a class="btn btn-secondary" href="/login" role="button">
                        Login
                    </a>
                </div>
            </form>
            
        </div>
    </div>
</div>

<%- include("footer") -%>
