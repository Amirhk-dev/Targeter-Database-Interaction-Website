<%- include("header") -%>
    <div class="row">
        <div class="col-lg-12">
            <form id="enterSampleData" method="POST" action='/submitFiducialsInfoManually'></form>
            <form id="addROI" method="POST" action='/submitOverviewImageManually'></form>
            <br>
            <br>
            <p class="lead_text">Enter ROI Data</p>
            <div class="form-group">
                <label class="label-text" for="ROImicroscopeDateSelect">Microscope Type</label>
                <select class="form-control" id="ROImicroscopeDateSelect" name="microscopeData">
                    <option selected>Choose...</option>
                    <option>Keyence</option>
                    <option>Nanofocus</option>
                </select>
            </div>
            <div class="form-group">
                <label class="label-text" for="ROIdetectionMethodSelect">Detection (Imaging) Method</label>
                <select class="form-control" id="ROIdetectionMethodSelect" name="detectionMethod">
                    <option selected>Choose...</option>
                    <option>Hough Circle Transform</option>
                    <option>Mask R-CNN</option>
                </select>
            </div>
            <% for (var i=0; i<listROIs.length; i++) { %>
                <div>
                    <label for="ROIoverviewImageLoad" class="form-label label-text">Insert the <%- listROIs[i] %>
                            </label>
                    <input class="form-control" type="file" id="ROIoverviewImageLoad">
                    <p>
                        <a class="btn btn-secondary" data-bs-toggle="collapse" href="#collapseSample" role="button"
                            aria-expanded="false" aria-controls="collapseSample">
                            Add Sample +
                        </a>
                    </p>
                    <div class="collapse" id="collapseSample">
                        <div class="card card-body">
                            <p class="lead_text">Enter Sample Information</p>
                            <div class="form-group">
                                <label class="label-text">Enter Pixel Size X (Width)</label>
                                <input type="number" name="PixelSizeX" class="form-control" placeholder="Pixel Width"
                                    min="1" max="800">
                            </div>
                            <div class="form-group">
                                <label class="label-text">Enter Pixel Size Y (Height)</label>
                                <input type="number" name="PixelSizeY" class="form-control" placeholder="Pixel Height"
                                    min="1" max="800">
                            </div>
                            <div class="form-group">
                                <label class="label-text">Bounding Box X Position <em>(Top-Left Corner
                                        Position)</em></label>
                                <input type="number" name="BBXPosition" class="form-control"
                                    placeholder="Bounding Box X Position" min="1" max="800">
                            </div>
                            <div class="form-group">
                                <label class="label-text">Bounding Box Y Position <em>(Top-Left Corner
                                        Position)</em></label>
                                <input type="number" name="BBYPosition" class="form-control"
                                    placeholder="Bounding Box Y Position" min="1" max="800">
                            </div>
                            <div class="form-group">
                                <label class="label-text">Bounding Box Width</label>
                                <input type="number" name="BBWidth" class="form-control"
                                    placeholder="Bounding Box Width" min="1" max="800">
                            </div>
                            <div class="form-group">
                                <label class="label-text">Bounding Box Height</label>
                                <input type="number" name="BBHeight" class="form-control"
                                    placeholder="Bounding Box Height" min="1" max="800">
                            </div>
                            <div>
                                <label for="MaskImageLoad" class="form-label label-text">Insert the Mask Image</label>
                                <input class="form-control" type="file" id="MaskImageLoad">
                            </div>
                            <div class="form-group">
                                <label for="sampleComments">Enter Comments Related to the Sample</label>
                                <textarea class="form-control" id="SampleComments" rows="2" minlength="0"
                                    maxlength="200"></textarea>
                            </div>
                            <hr />

                            <!-- SampleImage Related Data -->
                            <p class="lead_text">Enter Sample Image Information</p>
                            <div class="form-group">
                                <label class="label-text" for="SAMPLEmicroscopeDateSelect">Microscope Type</label>
                                <select class="form-control" id="SAMPLEmicroscopeDateSelect"
                                    name="SAMPLEmicroscopeData">
                                    <option selected>Choose...</option>
                                    <option>Keyence</option>
                                    <option>Nanofocus</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="label-text" for="SAMPLEdetectionMethodSelect">Detection (Imaging)
                                    Method</label>
                                <select class="form-control" id="SAMPLEdetectionMethodSelect"
                                    name="SAMPLEdetectionMethod">
                                    <option selected>Choose...</option>
                                    <option>Hough Circle Transform</option>
                                    <option>Mask R-CNN</option>
                                </select>
                            </div>
                            <div>
                                <label for="ROImageLoad" class="form-label label-text">Insert the ROI Image</label>
                                <input class="form-control" type="file" id="ROIImageLoad">
                            </div>
                            <div class="form-group">
                                <label class="label-text" for="imagetype">Image Type</label>
                                <select class="form-control" id="imagetype" name="ImageType">
                                    <option selected>Choose...</option>
                                    <option>PNG</option>
                                    <option>JPG</option>
                                    <option>JPEG</option>
                                    <option>TIFF</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="label-text">Image Width</label>
                                <input type="number" name="ImageWidth" class="form-control" placeholder="Image Width"
                                    min="1" max="800">
                            </div>
                            <div class="form-group">
                                <label class="label-text">Image Height</label>
                                <input type="number" name="ImageHeight" class="form-control" placeholder="Image Height"
                                    min="1" max="800">
                            </div>
                            <div class="form-group">
                                <label class="label-text">Image Size (in MB)</label>
                                <input type="number" name="ImageSize" class="form-control" placeholder="Image Size"
                                    min="0" max="500">
                            </div>
                            <div class="form-group">
                                <label for="ImageComments">Enter Comments Related to the Image</label>
                                <textarea class="form-control" id="ImageComments" rows="2" minlength="0"
                                    maxlength="200"></textarea>
                            </div>
                            <div>
                                <label for="ImageLoad" class="form-label label-text">Insert the Image</label>
                                <input class="form-control" type="file" id="ImageLoad">
                            </div>
                            <hr />
                            <a class="btn btn-secondary" data-bs-toggle="collapse" href="#collapseTarget" role="button"
                            aria-expanded="false" aria-controls="collapseTarget">
                                Add Target +
                            </a>
                            <div class="collapse" id="collapseTarget">
                            <!-- Target Related Data -->
                            <p class="lead_text">Enter Target Information</p>
                            <div class="form-group">
                                <label class="label-text" for="targetstatus">Target Status</label>
                                <select class="form-control" id="targetstatus" name="TargetStatus">
                                    <option selected>Choose...</option>
                                    <option>Mounted</option>
                                    <option>Unmounted</option>
                                    <option>Mounted Somewhere Else</option>
                                    <option>Shot</option>
                                    <option>Broken</option>
                                    <option>Archived</option>
                                    <option>Destroyed</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="label-text">Theta Angle (angle with respect to XY coordinates)</label>
                                <input type="number" name="ThetaAngle" class="form-control" placeholder="Theta Angle"
                                    min="-180" max="180">
                            </div>
                            <div class="form-group">
                                <label class="label-text">Phi Angle (angle with respect to XZ coordinates)</label>
                                <input type="number" name="PhiAngle" class="form-control" placeholder="Phi Angle"
                                    min="-180" max="180">
                            </div>
                            <div class="form-group">
                                <label class="label-text">Rho Angle (angle with respect to YZ coordinates)</label>
                                <input type="number" name="RhoAngle" class="form-control" placeholder="Rho Angle"
                                    min="-180" max="180">
                            </div>
                            <div class="form-group">
                                <label for="targetComments">Enter Comments Related to the Target</label>
                                <textarea class="form-control" id="targetComments" rows="2" minlength="0"
                                    maxlength="200"></textarea>
                            </div>
                            <hr />

                            <!-- Position Data Information -->
                            <p class="lead_text">Enter the Target Position Information</p>
                            <div class="form-check">
                                <label class="form-check-label" for="target_validity">Validity</label>
                                <input type="checkbox" class="form-check-input" id="target_validity">
                            </div>
                            <div class="form-group">
                                <label class="label-text">X Position</label>
                                <input type="number" name="targetXPosition" class="form-control"
                                    placeholder="Target X Position" min="1" max="800">
                            </div>
                            <div class="form-group">
                                <label class="label-text">Y Position</label>
                                <input type="number" name="targetYPosition" class="form-control"
                                    placeholder="Target Y Position" min="1" max="800">
                            </div>
                            <div class="form-group">
                                <label class="label-text">Z Position</label>
                                <input type="number" name="targetZPosition" class="form-control"
                                    placeholder="Target Z Position" min="1" max="800">
                            </div>
                            <div class="form-group">
                                <label class="label-text">In-Plane Accuracy</label>
                                <input type="number" name="inplaneAccuracy" class="form-control"
                                    placeholder="In-Plane Accuracy" min="0" max="1">
                            </div>
                            <div class="form-group">
                                <label class="label-text">Out-of-Plane Accuracy</label>
                                <input type="number" name="outofplaneAccuracy" class="form-control"
                                    placeholder="Out-of-Plane Accuracy" min="0" max="1">
                            </div>
                            <hr />

                            <!-- XFEL_Data Related Information -->
                            <p class="lead_text">XFEL Instrument Information</p>
                            <div class="form-group">
                                <label class="label-text" for="instrumentUsed">Instrument Used for Shooting</label>
                                <select class="form-control" id="instrumentUsed" name="instrumentUsed">
                                    <option selected>Choose...</option>
                                    <option>HED</option>
                                    <option>SPB/SFX</option>
                                    <option>SCS</option>
                                    <option>MID</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="targetInstrumentComments">Enter Comments Related to the Shooting</label>
                                <textarea class="form-control" id="targetInstrumentComments" rows="2" minlength="0"
                                    maxlength="200"></textarea>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>

                <% } %>
                    <button class="btn btn-secondary" type="submit" form="addROI">Add ROI +</button>
                    <br>
                    <button class="btn btn-secondary" type="submit" form="enterSampleData">Enter the Sample
                        Information</button>
        </div>
    </div>
    <%- include("footer") -%>