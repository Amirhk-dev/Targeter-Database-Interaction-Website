<%- include("header") -%>
    <div class="row">
        <div class="col-lg-12">
            <form id="enterTargetData" method="POST" action='/submitSampleImageManually'>
                <p class="lead_text">Enter the Sample Information</p>
                <div class="row twopanel">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="label-text">Enter the Bounding Box X Position</label>
                            <input type="number" name="sample_experiment_x_position" class="form-control"
                                placeholder="values between 0 and 800 are accepted" min="0" max="800">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="label-text">Enter the Bounding Box Y Position</label>
                            <input type="number" name="sample_experiment_y_position" class="form-control"
                                placeholder="values between 0 and 800 are accepted" min="0" max="800">
                        </div>
                    </div>
                </div>
                <div class="row twopanel">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="label-text">Enter the Bounding Box Width</label>
                            <input type="number" name="sample_experiment_width" class="form-control"
                                placeholder="values between 0 and 800 are accepted" min="0" max="800">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="label-text">Enter the Bounding Box Height</label>
                            <input type="number" name="sample_experiment_height" class="form-control"
                                placeholder="values between 0 and 800 are accepted" min="0" max="800">
                        </div>
                    </div>
                </div>
                <div class="row twopanel">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="label-text">Enter the Theta Angle (in degree)</label>
                            <input type="number" name="sample_experiment_theta" class="form-control"
                                placeholder="angle w.r.t. XY plane" min="0" max="360">
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="label-text">Enter the Phi Angle (in degree)</label>
                            <input type="number" name="sample_experiment_phi" class="form-control"
                                placeholder="angle w.r.t. XZ plane" min="0" max="360">
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label class="label-text">Enter the Rho Angle (in degree)</label>
                            <input type="number" name="sample_experiment_rho" class="form-control"
                                placeholder="angle w.r.t. YZ plane" min="0" max="360">
                        </div>
                    </div>
                </div>
                <div class="row twopanel">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="label-text" for="SampleDetectionMethodSelect">Select the Detection
                                Method</label>
                            <select class="form-control" id="SampleDetectionMethodSelect"
                                name="sample_detection_method">
                                <option selected>Choose...</option>
                                <option>Circle Detection</option>
                                <option>Rectangle Detection</option>
                                <option>Mask R-CNN</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="SampleMaskLoad" class="form-label label-text">Insert the Mask Image</label>
                            <input class="form-control" type="file" id="SampleMaskLoad" name="sample_mask_load">
                        </div>
                    </div>
                </div>
                <div class="row twopanel">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="label-text">Enter the Date of the Sample Experiment</label>
                            <input class="form-control" type="date" id="sample_experiment_date"
                                name="sample_experiment_date" min="2012-01-01" max="2040-12-31">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="label-text">Enter the Time of the Sample Experiment</label>
                            <input class="form-control" type="time" id="sample_experiment_time"
                                name="sample_experiment_time">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="sample_experiment_comments" class="label-text">Comments Related to the Sample
                        Experiment</label>
                    <textarea class="form-control" id="sample_experiment_comments" name="sample_experiment_comments"
                        placeholder="Maximum 100 characters are accepted" rows="2" minlength="0"
                        maxlength="200"></textarea>
                </div>
                <hr>
                <div class="row twopanel">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="label-text" for="SanokeDeviceSelect">Select the Device</label>
                            <select class="form-control" id="sample_device" name="sample_device">
                                <option selected>Choose...</option>
                                <option>Keyence</option>
                                <option>Nanofocus</option>
                                <option>Quanta</option>
                                <option>Zeiss</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="label-text" for="SampleEventType">Select the Event Type</label>
                            <select class="form-control" id="sample_event_type" name="sample_event_type">
                                <option selected>Choose...</option>
                                <option>XRay Measurement</option>
                                <option>XFEL Instrument Measurement</option>
                                <option>Imaging</option>
                                <option>High Resolution Imaging</option>
                                <option>Overview Imaging</option>
                                <option>Mounted</option>
                                <option>Unmounted</option>
                                <option>Mounted Somewhere Else</option>
                                <option>Shot</option>
                                <option>Broken</option>
                                <option>Archived</option>
                                <option>Destroyed</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row twopanel">
                    <div class="col-lg-6">
                        <div>
                            <label for="SampleEventLinkToData" class="form-label label-text">Insert the Link to the
                                Data</label>
                            <input class="form-control" type="file" id="SampleEventLinkToData"
                                name="sample_event_link_to_data">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div>
                            <label for="SampleEventLinkToMetaData" class="form-label label-text">Insert the Link to the
                                Meta
                                Data</label>
                            <input class="form-control" type="file" id="SampleEventLinkToMetaData"
                                name="sample_event_link_to_meta_data">
                        </div>
                    </div>
                </div>
                <div class="row twopanel">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="label-text">Enter the Date of the Sample Event</label>
                            <input class="form-control" type="date" id="sample_event_date" name="sample_event_date"
                                min="2012-01-01" max="2040-12-31">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="label-text">Enter the Time of the Sample Event</label>
                            <input class="form-control" type="time" id="sample_event_time" name="sample_event_time">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="sample_experiment_comments" class="label-text">Comments Related to the Sample
                        Event</label>
                    <textarea class="form-control" id="sample_event_comments" name="sample_event_comments"
                        placeholder="Maximum 100 of characters are accepted" rows="2" minlength="0"
                        maxlength="200"></textarea>
                </div>
                
                <button class="btn btn-secondary" type="submit" form="enterTargetData">Enter the Fiducial Points Infromation to be used by Targets</button>
            </form>
        </div>
    </div>
<%- include("footer") -%>