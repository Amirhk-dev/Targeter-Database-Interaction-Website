<%- include("header") -%>
    <div class="row">
        <div class="col-lg-12">
            <form id="submitTheData" method="POST" action='/submitAllData'>
            <br>
            <br>
            <!-- Target Related Data -->
            <p class="lead_text">Enter Target Information</p>
            <div class="form-check">
                <label class="form-check-label" for="target_image_validity">Validity</label>
                <input type="checkbox" class="form-check-input" id="target_image_validity" name="target_image_validity">
            </div>
            <div class="form-group">
                <label class="label-text" for="targetstatus">Target Status</label>
                <select class="form-control" id="targetstatus" name="target_status">
                    <option selected>Choose...</option>
                    <option>Mounted</option>
                    <option>Unmounted</option>
                    <option>Mounted Somewhere Else</option>
                    <option>Shot</option>
                    <option>Broken</option>
                    <option>Archived</option>
                    <option>Destroyed</option>
                </select>
            </div>
            <div class="form-group">
                <label class="label-text">Theta Angle (angle with respect to XY coordinates)</label>
                <input type="number" name="theta_angle" class="form-control" placeholder="Theta Angle (values between -180 and +180 are accepted)" min="-180"
                    max="180">
            </div>
            <div class="form-group">
                <label class="label-text">Phi Angle (angle with respect to XZ coordinates)</label>
                <input type="number" name="phi_angle" class="form-control" placeholder="Phi Angle (values between -180 and +180 are accepted)" min="-180" max="180">
            </div>
            <div class="form-group">
                <label class="label-text">Rho Angle (angle with respect to YZ coordinates)</label>
                <input type="number" name="rho_angle" class="form-control" placeholder="Rho Angle (values between -180 and +180 are accepted)" min="-180" max="180">
            </div>
            <div class="form-group">
                <label class="label-text">Enter the Date the Target Information is Inserted</strong></label>
                <input class="form-control" type="date" id="targetinfo_experiment_date" name="targetinfo_experiment_date"
                    min="2012-01-01" max="2040-12-31">
            </div>
            <div class="form-group">
                <label class="label-text">Enter the Time the Target Information is Inserted</strong></label>
                <input class="form-control" type="time" id="targetinfo_experiment_time" name="targetinfo_experiment_time">
            </div>
            <div class="form-group">
                <label for="targetComments">Enter Comments Related to the Target</label>
                <textarea class="form-control" id="targetComments" name="target_comments" placeholder="Comments (maximum 200 characters are accepted)" rows="2" minlength="0" maxlength="200"></textarea>
            </div>
            <hr />

            <!-- Position Data Information -->
            <p class="lead_text">Enter the Target Position Information</p>
            <div class="form-check">
                <label class="form-check-label" for="target_validity">Validity</label>
                <input type="checkbox" class="form-check-input" id="target_validity" name="target_validity">
            </div>
            <div class="form-group">
                <label class="label-text">X Position</label>
                <input type="number" name="target_x_position" class="form-control" placeholder="Target X Position (values between 0 and 800 are accepted)" min="0"
                    max="800">
            </div>
            <div class="form-group">
                <label class="label-text">Y Position</label>
                <input type="number" name="target_y_position" class="form-control" placeholder="Target Y Position (values between 0 and 800 are accepted)" min="0"
                    max="800">
            </div>
            <div class="form-group">
                <label class="label-text">Z Position</label>
                <input type="number" name="target_z_position" class="form-control" placeholder="Target Z Position (values between 0 and 800 are accepted)" min="0"
                    max="800">
            </div>
            <div class="form-group">
                <label class="label-text">In-Plane Accuracy</label>
                <input type="number" step="any" name="inplane_accuracy" class="form-control" placeholder="In-Plane Accuracy (values between 0 and 1 are accepted)" min="0"
                    max="1">
            </div>
            <div class="form-group">
                <label class="label-text">Out-of-Plane Accuracy</label>
                <input type="number" step="any" name="out_of_plane_accuracy" class="form-control" placeholder="Out-of-Plane Accuracy (values between 0 and 1 are accepted)"
                    min="0" max="1">
            </div>
            <div class="form-group">
                <label class="label-text">Enter the Date the Target Position Information is Inserted</strong></label>
                <input class="form-control" type="date" id="targetpositioninfo_experiment_date" name="targetpositioninfo_experiment_date"
                    min="2012-01-01" max="2040-12-31">
            </div>
            <div class="form-group">
                <label class="label-text">Enter the Time the Target Position Information is Inserted</strong></label>
                <input class="form-control" type="time" id="targetpositioninfo_experiment_time" name="targetpositioninfo_experiment_time">
            </div>
            <hr />
            <!-- XFEL_Data Related Information -->
            <p class="lead_text">XFEL Instrument Information</p>
            <div class="form-group">
                <label class="label-text" for="instrumentUsed">Instrument Used for Shooting</label>
                <select class="form-control" id="instrumentUsed" name="instrument_used">
                    <option selected>Choose...</option>
                    <option>HED</option>
                    <option>SPB/SFX</option>
                    <option>SCS</option>
                    <option>MID</option>
                </select>
            </div>
            <div class="form-group">
                <label class="label-text">Enter the Date the XFEL Data Information is Inserted</strong></label>
                <input class="form-control" type="date" id="xfeldata_experiment_date" name="xfeldata_experiment_date"
                    min="2012-01-01" max="2040-12-31">
            </div>
            <div class="form-group">
                <label class="label-text">Enter the Time the XFEL Data Information is Inserted</strong></label>
                <input class="form-control" type="time" id="xfeldata_experiment_time" name="xfeldata_experiment_time">
            </div>
            <div class="form-group">
                <label for="targetInstrumentComments">Enter Comments Related to the Shooting</label>
                <textarea class="form-control" id="targetInstrumentComments" placeholder="Comments (maximum 200 characters are accepted)" rows="2" minlength="0" name="target_instrument_comments"
                    maxlength="200"></textarea>
            </div>
            <button class="btn btn-secondary" type="submit" form="submitTheData">Submit the Data</button>
        </form>
        </div>
    </div>
<%- include("footer") -%>