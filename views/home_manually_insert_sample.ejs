<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <form method="POST" action='/submitSampleInfoManually'>
            <br>
                <p class="lead_text">Enter Sample Data: </p>
                <div class="form-group">
                    <label class="label-text">Enter Pixel Size X: </label>
                    <input type="number" name="PixelSizeX" class="form" placeholder="PixelSizeX">
                </div>
                <div class="form-group">
                    <label class="label-text">Enter Pixel Size Y: </label>
                    <input type="number" name="PixelSizeY" class="form" placeholder="PixelSizeY">
                </div>
                <div class="form-group">
                    <label class="label-text">Enter Bounding Box X Position: </label>
                    <input type="number" name="BBXPosition" class="form" placeholder="BBXPosition">
                </div>
                <div class="form-group">
                    <label class="label-text">Enter Bounding Box Y Position: </label>
                    <input type="number" name="BBYPosition" class="form" placeholder="BBYPosition">
                </div>
                <div class="form-group">
                    <label class="label-text">Enter Bounding Box Width: </label>
                    <input type="number" name="BBWidth" class="form" placeholder="BBWidth">
                </div>
                <div class="form-group">
                    <label class="label-text">Enter Bounding Box Height: </label>
                    <input type="number" name="BBHeight" class="form" placeholder="BBHeight">
                </div>
                <div>    
                    <label class="label-text" id="mask_image_insert" for="MaskImageLoad">Select the Mask Image: </label>
                    <input type="file" class="form-control-file" id="MaskImageLoad" name="MaskImage">
                </div>
                <div class="form-group">
                    <label class="label-text" for="commentsTextArea">Enter the Comment: </label>
                    <input type="text" name="Comment" class="form" placeholder="Comment">
                </div>
                <button class="btn btn-secondary">Next (Insert Target Infortmation)</button>
            </form>
        </div>
    </div>
